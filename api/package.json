{
    "version": "1.0.0",
    "private": true,
    "engines": {
      "yarn": "^1.10.1"
    },
    "workspaces": [
      "packages/*"
    ],
    "devDependencies": {
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    },
    "scripts": {
        "build": "yarn generate:defs && yarn generate:meta",
        "generate:defs": "ts-node --skip-project node_modules/.bin/polkadot-types-from-defs --package @snowbridge-network/types --input packages/types/src/interfaces --endpoint packages/types/metadata/snowbase.json",
        "generate:meta": "ts-node --skip-project node_modules/.bin/polkadot-types-from-chain --package @snowbridge-network/types --endpoint packages/types/metadata/snowbase.json --output packages/types/src/interfaces "
    }
}
