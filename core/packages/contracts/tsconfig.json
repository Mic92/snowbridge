{
  "compilerOptions": {
    "composite": true,
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"]
    },
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
  ],
}
