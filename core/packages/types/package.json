{
  "name": "@snowbridge/types",
  "version": "1.0.0",
  "description": "Snowbridge Parachain Types",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Snowfork/snowbridge.git",
    "directory": "core/packages/types"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "generate": "pnpm run generate:defs && pnpm run generate:meta",
    "generate:defs": "polkadot-types-from-defs --input src/interfaces --package @snowbridge/types/interfaces --endpoint ws://localhost:11144",
    "generate:meta": "polkadot-types-from-chain --output src/interfaces --package @snowbridge/types/interface --strict --endpoint ws://localhost:11144 "
  },
  "devDependencies": {
    "@polkadot/typegen": "9.6.2",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@polkadot/api": "9.6.2",
    "@polkadot/api-base": "9.6.2",
    "@polkadot/rpc-core": "9.6.2",
    "@polkadot/types": "9.6.2",
    "@polkadot/types-codec": "9.6.2"
  }
}
